<MeanCloud_IncreasedAnimals>

  <!-- DOUGH:
  NOTE: FriendlyAnimalsAll is a group this mod creates.
  -->
  <!-- DOUGH: FriendlyAnimalsX no longer exsit to delete
  <remove xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='FriendlyAnimalsForest']"></remove>
  <remove xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='FriendlyAnimalsDesert']"></remove>
  <remove xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='FriendlyAnimalsSnow']"></remove>
  -->

  <!-- DOUGH: Replace with the FriendlyAnimalsAll spawn group in this mod to all biomes that would normally spawn ....zeds? -->
  <insertAfter xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='ZombiesAll']">
    <spawn maxcount="3" respawndelay="2" time="Any" entitygroup="FriendlyAnimalsAll" spawnDeadChance="0" />
  </insertAfter>

  <insertAfter xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='ZombiesAll']">
    <spawn maxcount="2" respawndelay="2" time="Any" entitygroup="FriendlyAnimalsAll" spawnDeadChance="0" />
  </insertAfter>

  <insertAfter xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='ZombiesBurntForest']">
    <spawn maxcount="1" respawndelay="3" time="Any" entitygroup="FriendlyAnimalsAll" spawnDeadChance="0" />
  </insertAfter>

  <insertAfter xpath="/spawning/biome[@name='wasteland']/spawn[@entitygroup='ZombiesWastelandNight']">
    <spawn maxcount="1" respawndelay="3" time="Any" entitygroup="FriendlyAnimalsAll" spawnDeadChance="0" />
  </insertAfter>

  <insertAfter xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='SnowZombies']">
    <spawn maxcount="2" respawndelay="3" time="Any" entitygroup="FriendlyAnimalsAll" spawnDeadChance="0" />
  </insertAfter>

  <!-- DOUGH: Hard nerf to enemy spawn numbers -->
  <set xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='EnemyAnimalsForest']/@maxcount">1</set>
  <set xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='EnemyAnimalsDesert']/@maxcount">1</set>
  <set xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='EnemyAnimalsBurntForest']/@maxcount">1</set>
  <set xpath="/spawning/biome[@name='wasteland']/spawn[@entitygroup='EnemyAnimalsWasteland']/@maxcount">1</set>
  <set xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='EnemyAnimalsSnow']/@maxcount">1</set>

  <set xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='EnemyAnimalsForest']/@respawndelay">5</set>
  <set xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='EnemyAnimalsDesert']/@respawndelay">5</set>
  <set xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='EnemyAnimalsBurntForest']/@respawndelay">5</set>
  <set xpath="/spawning/biome[@name='wasteland']/spawn[@entitygroup='EnemyAnimalsWasteland']/@respawndelay">5</set>
  <set xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='EnemyAnimalsSnow']/@respawndelay">5</set>

